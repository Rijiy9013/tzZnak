{
  "name": "acme/catalog-api",
  "description": "REST API без фреймворка: каталог товаров + DaData + Elasticsearch",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": "^8.3",
    "ext-json": "*",
    "ext-pdo": "*",
    "ext-pdo_mysql": "*",
    "nikic/fast-route": "^1.3",
    "nyholm/psr7": "^1.8",
    "nyholm/psr7-server": "^1.0",
    "php-di/php-di": "^7.0",
    "vlucas/phpdotenv": "^5.6",
    "monolog/monolog": "^3.6",
    "doctrine/dbal": "^3.8",
    "doctrine/migrations": "^3.8",
    "symfony/cache": "^6.4",
    "guzzlehttp/guzzle": "^7.9",
    "elasticsearch/elasticsearch": "^8.14",
    "symfony/console": "^6.4",
    "psr/simple-cache": "3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "mockery/mockery": "^1.6"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Tests\\": "tests/",
      "Migrations\\": "migrations/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "composer dump-autoload -o"
    ],
    "post-update-cmd": [
      "composer dump-autoload -o"
    ],
    "migrate": "php vendor/bin/doctrine-migrations migrate --no-interaction",
    "migrate:diff": "php vendor/bin/doctrine-migrations diff",
    "reindex": "php bin/console app:reindex-products",
    "test": "php -d zend.enable_gc=0 ./vendor/bin/phpunit"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "php-http/discovery": true
    }
  }
}
